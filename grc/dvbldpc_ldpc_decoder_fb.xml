<?xml version="1.0"?>
<block>
  <name>LDPC Decoder</name>
  <key>dvbldpc_ldpc_decoder_fb</key>
  <category>[Core]/Digital Television/DVB-LDPC</category>
  <import>import dvbldpc</import>
  <make>dvbldpc.ldpc_decoder_fb($standard.val, #slurp
#if str($standard) == 'STANDARD_DVBT2'
$framesize1.val, #slurp
#else
$framesize2.val, #slurp
#end if
#if str($standard) == 'STANDARD_DVBT2'
#if str($framesize1) == 'FECFRAME_NORMAL'
$rate1.val, #slurp
#else
$rate2.val, #slurp
#end if
#else
#if str($framesize2) == 'FECFRAME_NORMAL'
$rate3.val, #slurp
#else
$rate4.val, #slurp
#end if
#end if
#if str($standard) == 'STANDARD_DVBT2'
$constellation1.val, #slurp
#else
$constellation2.val, #slurp
#end if
)</make>
  <param>
    <name>Standard</name>
    <key>standard</key>
    <type>enum</type>
    <option>
      <name>DVB-S2</name>
      <key>STANDARD_DVBS2</key>
      <opt>val:dvbldpc.STANDARD_DVBS2</opt>
      <opt>hide_dvbs2:</opt>
      <opt>hide_dvbt2:all</opt>
    </option>
    <option>
      <name>DVB-T2</name>
      <key>STANDARD_DVBT2</key>
      <opt>val:dvbldpc.STANDARD_DVBT2</opt>
      <opt>hide_dvbs2:all</opt>
      <opt>hide_dvbt2:</opt>
    </option>
  </param>
  <param>
    <name>FECFRAME size</name>
    <key>framesize1</key>
    <type>enum</type>
    <hide>$standard.hide_dvbt2</hide>
    <option>
      <name>Normal</name>
      <key>FECFRAME_NORMAL</key>
      <opt>val:dvbldpc.FECFRAME_NORMAL</opt>
      <opt>hide_normal:</opt>
      <opt>hide_short:all</opt>
    </option>
    <option>
      <name>Short</name>
      <key>FECFRAME_SHORT</key>
      <opt>val:dvbldpc.FECFRAME_SHORT</opt>
      <opt>hide_normal:all</opt>
      <opt>hide_short:</opt>
    </option>
  </param>
  <param>
    <name>FECFRAME size</name>
    <key>framesize2</key>
    <type>enum</type>
    <hide>$standard.hide_dvbs2</hide>
    <option>
      <name>Normal</name>
      <key>FECFRAME_NORMAL</key>
      <opt>val:dvbldpc.FECFRAME_NORMAL</opt>
      <opt>hide_normal:</opt>
      <opt>hide_short:all</opt>
    </option>
    <option>
      <name>Short</name>
      <key>FECFRAME_SHORT</key>
      <opt>val:dvbldpc.FECFRAME_SHORT</opt>
      <opt>hide_normal:all</opt>
      <opt>hide_short:</opt>
    </option>
  </param>
  <param>
    <name>Code rate</name>
    <key>rate1</key>
    <type>enum</type>
    <hide>#if str($standard) == 'STANDARD_DVBT2' then $framesize1.hide_normal else 'all'</hide>
    <option>
      <name>1/2</name>
      <key>C1_2</key>
      <opt>val:dvbldpc.C1_2</opt>
    </option>
    <option>
      <name>3/5</name>
      <key>C3_5</key>
      <opt>val:dvbldpc.C3_5</opt>
    </option>
    <option>
      <name>2/3</name>
      <key>C2_3</key>
      <opt>val:dvbldpc.C2_3</opt>
    </option>
    <option>
      <name>3/4</name>
      <key>C3_4</key>
      <opt>val:dvbldpc.C3_4</opt>
    </option>
    <option>
      <name>4/5</name>
      <key>C4_5</key>
      <opt>val:dvbldpc.C4_5</opt>
    </option>
    <option>
      <name>5/6</name>
      <key>C5_6</key>
      <opt>val:dvbldpc.C5_6</opt>
    </option>
  </param>
  <param>
    <name>Code rate</name>
    <key>rate2</key>
    <type>enum</type>
    <hide>#if str($standard) == 'STANDARD_DVBT2' then $framesize1.hide_short else 'all'</hide>
    <option>
      <name>1/3</name>
      <key>C1_3</key>
      <opt>val:dvbldpc.C1_3</opt>
    </option>
    <option>
      <name>2/5</name>
      <key>C2_5</key>
      <opt>val:dvbldpc.C2_5</opt>
    </option>
    <option>
      <name>1/2</name>
      <key>C1_2</key>
      <opt>val:dvbldpc.C1_2</opt>
    </option>
    <option>
      <name>3/5</name>
      <key>C3_5</key>
      <opt>val:dvbldpc.C3_5</opt>
    </option>
    <option>
      <name>2/3</name>
      <key>C2_3</key>
      <opt>val:dvbldpc.C2_3</opt>
    </option>
    <option>
      <name>3/4</name>
      <key>C3_4</key>
      <opt>val:dvbldpc.C3_4</opt>
    </option>
    <option>
      <name>4/5</name>
      <key>C4_5</key>
      <opt>val:dvbldpc.C4_5</opt>
    </option>
    <option>
      <name>5/6</name>
      <key>C5_6</key>
      <opt>val:dvbldpc.C5_6</opt>
    </option>
  </param>
  <param>
    <name>Code rate</name>
    <key>rate3</key>
    <type>enum</type>
    <hide>#if str($standard) == 'STANDARD_DVBS2' then $framesize2.hide_normal else 'all'</hide>
    <option>
      <name>1/4</name>
      <key>C1_4</key>
      <opt>val:dvbldpc.C1_4</opt>
    </option>
    <option>
      <name>1/3</name>
      <key>C1_3</key>
      <opt>val:dvbldpc.C1_3</opt>
    </option>
    <option>
      <name>2/5</name>
      <key>C2_5</key>
      <opt>val:dvbldpc.C2_5</opt>
    </option>
    <option>
      <name>1/2</name>
      <key>C1_2</key>
      <opt>val:dvbldpc.C1_2</opt>
    </option>
    <option>
      <name>3/5</name>
      <key>C3_5</key>
      <opt>val:dvbldpc.C3_5</opt>
    </option>
    <option>
      <name>2/3</name>
      <key>C2_3</key>
      <opt>val:dvbldpc.C2_3</opt>
    </option>
    <option>
      <name>3/4</name>
      <key>C3_4</key>
      <opt>val:dvbldpc.C3_4</opt>
    </option>
    <option>
      <name>4/5</name>
      <key>C4_5</key>
      <opt>val:dvbldpc.C4_5</opt>
    </option>
    <option>
      <name>5/6</name>
      <key>C5_6</key>
      <opt>val:dvbldpc.C5_6</opt>
    </option>
    <option>
      <name>8/9</name>
      <key>C8_9</key>
      <opt>val:dvbldpc.C8_9</opt>
    </option>
    <option>
      <name>9/10</name>
      <key>C9_10</key>
      <opt>val:dvbldpc.C9_10</opt>
    </option>
  </param>
  <param>
    <name>Code rate</name>
    <key>rate4</key>
    <type>enum</type>
    <hide>#if str($standard) == 'STANDARD_DVBS2' then $framesize2.hide_short else 'all'</hide>
    <option>
      <name>1/4</name>
      <key>C1_4</key>
      <opt>val:dvbldpc.C1_4</opt>
    </option>
    <option>
      <name>1/3</name>
      <key>C1_3</key>
      <opt>val:dvbldpc.C1_3</opt>
    </option>
    <option>
      <name>2/5</name>
      <key>C2_5</key>
      <opt>val:dvbldpc.C2_5</opt>
    </option>
    <option>
      <name>1/2</name>
      <key>C1_2</key>
      <opt>val:dvbldpc.C1_2</opt>
    </option>
    <option>
      <name>3/5</name>
      <key>C3_5</key>
      <opt>val:dvbldpc.C3_5</opt>
    </option>
    <option>
      <name>2/3</name>
      <key>C2_3</key>
      <opt>val:dvbldpc.C2_3</opt>
    </option>
    <option>
      <name>3/4</name>
      <key>C3_4</key>
      <opt>val:dvbldpc.C3_4</opt>
    </option>
    <option>
      <name>4/5</name>
      <key>C4_5</key>
      <opt>val:dvbldpc.C4_5</opt>
    </option>
    <option>
      <name>5/6</name>
      <key>C5_6</key>
      <opt>val:dvbldpc.C5_6</opt>
    </option>
    <option>
      <name>8/9</name>
      <key>C8_9</key>
      <opt>val:dvbldpc.C8_9</opt>
    </option>
  </param>
  <param>
    <name>Constellation</name>
    <key>constellation1</key>
    <type>enum</type>
    <hide>$standard.hide_dvbt2</hide>
    <option>
      <name>QPSK</name>
      <key>MOD_QPSK</key>
      <opt>val:dvbldpc.MOD_QPSK</opt>
    </option>
    <option>
      <name>16QAM</name>
      <key>MOD_16QAM</key>
      <opt>val:dvbldpc.MOD_16QAM</opt>
    </option>
    <option>
      <name>64QAM</name>
      <key>MOD_64QAM</key>
      <opt>val:dvbldpc.MOD_64QAM</opt>
    </option>
    <option>
      <name>256QAM</name>
      <key>MOD_256QAM</key>
      <opt>val:dvbldpc.MOD_256QAM</opt>
    </option>
  </param>
  <param>
    <name>Constellation</name>
    <key>constellation2</key>
    <type>enum</type>
    <hide>$standard.hide_dvbs2</hide>
    <option>
      <name>QPSK</name>
      <key>MOD_QPSK</key>
      <opt>val:dvbldpc.MOD_QPSK</opt>
    </option>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
